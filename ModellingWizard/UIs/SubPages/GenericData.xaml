<Page
    x:Class="ModellingWizard.UIs.SubPages.GenericData"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ModellingWizard.UIs.SubPages"
    xmlns:controls = "using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:converters="using:CommunityToolkit.WinUI.UI.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Content="Add Role Class" Name="AddRoleClassButton" Click="AddRoleClassButton_Click"/>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition />
            </Grid.RowDefinitions>
            <TextBlock Text="Added gernerics"/>
            <TreeView>
                
            </TreeView>
        </Grid>
        <controls:DataGrid Grid.Row="2">
            <controls:DataGrid.Columns>
                <controls:DataGridTextColumn Header="Atrribute" />
                <controls:DataGridTextColumn Header="Value"/>
                <controls:DataGridTextColumn Header="Default"/>
                <controls:DataGridTextColumn Header="Units"/>
                <controls:DataGridTextColumn Header="DataType"/>
                <controls:DataGridComboBoxColumn Header="Semantic"/>
            </controls:DataGrid.Columns>
        </controls:DataGrid>
    </Grid>
</Page>
